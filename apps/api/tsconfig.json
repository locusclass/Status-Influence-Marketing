{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node18",
    "moduleResolution": "node18",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
