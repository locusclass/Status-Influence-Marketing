{
  "name": "gig-marketing",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "start": "pnpm --filter @gig/api start",
    "dev:api": "pnpm --filter @gig/shared build && pnpm --filter @gig/api dev",
    "dev:worker": "pnpm --filter @gig/shared build && pnpm --filter @gig/worker dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "typescript": "^5.4.5"
  }
}
